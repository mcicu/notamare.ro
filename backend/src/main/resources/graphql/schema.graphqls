schema {
    query: Query
    mutation: Mutation
}

# The Root Query for the application
type Query {
    tutors: [Tutor]!
}

# The Root Mutation for the application
type Mutation {
    createTutor(tutor: TutorInput) : Tutor!
    updateTutor(id: String, tutor: TutorInput): Tutor!
    deleteTutor(id: String): Boolean
}

type Void {
}
